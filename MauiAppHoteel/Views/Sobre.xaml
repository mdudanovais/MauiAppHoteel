<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHoteel.Views.Sobre"
             Title="Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource MidnightBlue}">
    <VerticalStackLayout VerticalOptions="CenterAndExpand">
        <Label 
            Text="Sobre"
            FontFamily="Playfair"
            TextColor="{StaticResource PrimaryDark}"
            FontSize="40"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Frame Padding="10">
            <VerticalStackLayout>
                <Label Text="O nosso App foi desenvolvido com o intuito de facilitar sua contratação dos nossos serviços, obrigada por nos escolher!"/>

                <Label Text="Desenvolvido por: Maria Eduarda Novais de Vigo"/>

                <Label Text="Desenvolvido em: 02/11/2024"/>

            </VerticalStackLayout>

            </Frame>
            
            <Grid RowDefinitions="*, *, *"
                  ColumnDefinitions="*, *, *">

                <Button Grid.Row="2" Grid.Column="1"
                        Text="Retomar" Clicked="Button_Clicked"/>
            </Grid>
       
    </VerticalStackLayout>
</ContentPage>